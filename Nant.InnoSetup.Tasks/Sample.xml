<innosetup exepath="C:\Program Files\Inno Setup 5\ISCC.exe">
  <comment>Script generated by the Inno Setup Script Wizard.</comment>
  <comment>SEE THE DOCUMENTATION FOR DETAILS ON CREATING INNO SETUP SCRIPT FILES!</comment>

  <define name="MyAppName" value="My Program" />
  <define name="MyAppVerName" value="My Program 1.5" />
  <define name="MyAppPublisher" value="My Company, Inc." />
  <define name="MyAppURL" value="http://www.mycompany.com" />
  <define name="MyAppExeName" value="MyProg.exe" />

  <setup>
    <appname>{#MyAppName}</Appname>
    <appvername>{#MyAppVerName}</appvername>
    <apppublisher>{#MyAppPublisher}</apppublisher>
    <apppublisherurl>{#MyAppURL}</apppublisherurl>
    <appsupporturl>{#MyAppURL}</appsupporturl>
    <appupdatesurl>{#MyAppURL}</appupdatesurl>
    <defaultdirname>{pf}\{#MyAppName}</defaultdirname>
    <defaultgroupname>{#MyAppName}</defaultgroupname>
    <outputbasefilename>setup</outputbasefilename>
    <compression>lzma</compression>
    <solidcompression>yes</solidcompression>
  </setup>

  <tasks>
    <task name="desktopicon" description="{cm:CreateDesktopIcon}" groupdescription="{cm:AdditionalIcons}" flags="unchecked" />
  </tasks>

  <files>
    <file source="C:\Program Files\Inno Setup 5\Examples\MyProg.exe" destdir="{app}" flags="ignoreversion" />
    <comment>NOTE: Don't use "Flags: ignoreversion" on any shared system files</comment>
  </files>

  <icons>
    <icon name="{group}\{#MyAppName}" filename="{app}\{#MyAppExeName}" />
    <icon name="{userdesktop}\{#MyAppName}" filename="{app}\{#MyAppExeName}" tasks="desktopicon" />
  </icons>

  <run>
    <program filename="{app}\{#MyAppExeName}" description="{cm:LaunchProgram,{#MyAppName}}" flags="nowait postinstall skipifsilent" />
  <run>
</innosetup>